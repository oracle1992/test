bool OBJParser::Read(const wchar_t* ipFileName, GBGPolyData& oPolyData)
{
	bool bRetVal = false;
	std::ifstream objFile;
	objFile.open(ipFileName);
	std::string line;

	if (objFile.is_open())
	{
		double point[3] = { 0.0 };
		int triangleIndices[3] = { 0 };

		while (!objFile.eof())
		{
			std::string textInLine;
			getline(objFile, line);
			std::stringstream lineData(line);
			lineData >> textInLine;

			if (textInLine == "v")
			{
				lineData >> point[0] >> point[1] >> point[2];
				mVertices.push_back(point[0]);
				mVertices.push_back(point[1]);
				mVertices.push_back(point[2]);
			}
			else if (textInLine == "f")
			{
				lineData >> triangleIndices[0] >> triangleIndices[1] >> triangleIndices[2];
				mTriangles.push_back(triangleIndices[0] - 1);
				mTriangles.push_back(triangleIndices[1] - 1);
				mTriangles.push_back(triangleIndices[2] - 1);
			}

		}
		FillPolyData(oPolyData);

		objFile.close();
		bRetVal = true;
	}
	return bRetVal;
}
